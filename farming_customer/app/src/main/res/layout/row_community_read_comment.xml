<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="communityViewModel"
            type="kr.co.lion.farming_customer.viewmodel.CommunityViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewRowCommunityReadCommentProfile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/textViewRowCommunityReadCommentWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@{communityViewModel.textViewRowCommunityReadCommentWriter}"
                android:textColor="@color/brown_01"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewRowCommunityReadCommentContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="@{communityViewModel.textViewRowCommunityReadCommentContent}"
            android:textColor="@color/brown_01"
            android:textSize="12sp" />

    </LinearLayout>
</layout>
