<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="tradeSearchViewModel"
            type="kr.co.lion.farming_customer.viewmodel.tradeCrop.TradeSearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:hint="원하는 농작물을 검색해보세요"
            app:endIconMode="clear_text"
            app:endIconTint="@color/brown_01"
            app:hintTextColor="@color/grey_01"
            app:startIconDrawable="@drawable/search"
            tools:layout_editor_absoluteX="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/pretendard_regular"
                android:inputType="text"
                android:textColor="@color/brown_01"
                android:textSize="12sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewPaymentCrop_crop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout17">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/imageButtonDropDown"
                        android:layout_width="14dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/polygon_down"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/buttonTradeSearch_ratingDesc"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:minWidth="0dip"
                        android:minHeight="0dip"
                        android:text="별점순"
                        android:textColor="@color/brown_01"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/imageButtonDropDown"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/buttonTradeSearch_likeDesc"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center_horizontal|center_vertical"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dip"
                    android:minHeight="0dip"
                    android:text="찜순"
                    android:textColor="@color/brown_01"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonTradeSearch_priceAsc"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center_horizontal|center_vertical"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dip"
                    android:minHeight="0dip"
                    android:text="금액 높은순"
                    android:textColor="@color/brown_01"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonTradeSearch_priceDesc"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center_horizontal|center_vertical"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dip"
                    android:minHeight="0dip"
                    android:text="금액 낮은순"
                    android:textColor="@color/brown_01"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTradeSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewPaymentCrop_crop" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>