<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="communityViewModel"
            type="kr.co.lion.farming_customer.viewmodel.CommunityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragment.community.CommunityTabSocialFragment">

        <kr.co.lion.farming_customer.MaterialButtonToggleGroupWithRadius
            android:id="@+id/materialButtonToggleGroupWithRadius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCommunityTabSocialPopularity"
                style="@style/OutlinedButtonStyle"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/font_pre_semibold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="인기순"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCommunityTabSocialRecent"
                style="@style/OutlinedButtonStyle"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/font_pre_semibold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="최신순"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCommunityTabSocialLook"
                style="@style/OutlinedButtonStyle"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/font_pre_semibold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="조회순"
                android:textSize="12sp" />
        </kr.co.lion.farming_customer.MaterialButtonToggleGroupWithRadius>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/materialButtonToggleGroupWithRadius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCommunityTabSocial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
