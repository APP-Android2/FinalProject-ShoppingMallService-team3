<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="communityViewModel"
            type="kr.co.lion.farming_customer.viewmodel.community.CommunityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/linearLayoutCommunityListInformation"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/linearLayoutCommunityListInformation"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:id="@+id/imageViewCommunityListInformation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey_02"
                        app:srcCompat="@drawable/ic_launcher_foreground" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/linearLayoutCommunityListInformation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/materialCardView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/textViewCommunityListLabelInformation"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/community_label_border"
                        android:gravity="center"
                        android:text="@{communityViewModel.textViewCommunityListLabelInformation}"
                        android:textColor="@color/green_main"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewCommunityListTitleInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="@{communityViewModel.textViewCommunityListTitleInformation}"
                        android:textColor="@color/brown_01"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewCommunityListContentInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="@{communityViewModel.textViewCommunityListContentInformation}"
                        android:textColor="@color/brown_01"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/imageViewCommunityListViewInformation"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="2dp"
                            app:srcCompat="@drawable/views_count"
                            tools:layout_editor_absoluteX="260dp" />

                        <TextView
                            android:id="@+id/textViewCommunityListViewCntInformation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{communityViewModel.textViewCommunityListViewCntInformation}"
                            android:textColor="@color/brown_01"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageViewCommunityListCommentInformation"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="2dp"
                            app:srcCompat="@drawable/comments"
                            tools:layout_editor_absoluteX="260dp" />

                        <TextView
                            android:id="@+id/textViewCommunityListCommentCntInformation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@{communityViewModel.textViewCommunityListCommentCntInformation}"
                            android:textColor="@color/brown_01"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:background="@color/brown_01" />

                        <TextView
                            android:id="@+id/textViewCommunityListDateInformation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{communityViewModel.textViewCommunityListDateInformation}"
                            android:textColor="@color/brown_01"
                            android:textSize="12sp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageViewCommunityListLikeInformation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:checked="true"
                        app:srcCompat="@drawable/community_image_like" />

                    <TextView
                        android:id="@+id/textViewCommunityListLikeCntInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="@{communityViewModel.textViewCommunityListLikeCntInformation}"
                        android:textColor="@drawable/community_tab_like_cnt"
                        android:checked="true"
                        android:textSize="8sp"
                        app:layout_constraintBottom_toBottomOf="@id/imageViewCommunityListLikeInformation"
                        app:layout_constraintEnd_toEndOf="@id/imageViewCommunityListLikeInformation"
                        app:layout_constraintStart_toStartOf="@id/imageViewCommunityListLikeInformation"
                        app:layout_constraintTop_toTopOf="@id/imageViewCommunityListLikeInformation" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>
