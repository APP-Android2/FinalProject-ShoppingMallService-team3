<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="likeViewModel"
            type="kr.co.lion.farming_customer.viewmodel.LikeViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/linearLayout2"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/linearLayout2"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:id="@+id/imageViewLikePost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/materialCardView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/textViewLikePostLabel"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/mypost_label_border"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"
                        android:text="라벨종류"
                        android:textColor="@color/orange_01"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewLikePostTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="글제목"
                        android:textColor="@color/brown_01"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewLikePostContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:minLines="2"
                        android:text="글내용입니다글내용입니다글내용입니다글내용입니다글내용입니다글내용입니다글내용입니다"
                        android:textColor="@color/brown_01"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/imageViewLikePostView"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="2dp"
                            app:srcCompat="@drawable/views_count"
                            tools:layout_editor_absoluteX="260dp" />

                        <TextView
                            android:id="@+id/textViewLikePostViewCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="10"
                            android:textColor="@color/brown_01"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageViewLikePostComment"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="2dp"
                            app:srcCompat="@drawable/comments"
                            tools:layout_editor_absoluteX="260dp" />

                        <TextView
                            android:id="@+id/textViewLikePostCommentCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="100"
                            android:textColor="@color/brown_01"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:background="@color/brown_01" />

                        <TextView
                            android:id="@+id/textViewLikePostDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="2024.04.03"
                            android:textColor="@color/brown_01"
                            android:textSize="12sp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/heart_01" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="999+"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        app:layout_constraintBottom_toBottomOf="@id/imageView"
                        app:layout_constraintEnd_toEndOf="@id/imageView"
                        app:layout_constraintStart_toStartOf="@id/imageView"
                        app:layout_constraintTop_toTopOf="@id/imageView" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>
