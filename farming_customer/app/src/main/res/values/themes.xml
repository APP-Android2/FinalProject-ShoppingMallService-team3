<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Farming_customer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        // 기본 색상 설정
        <item name="colorPrimary">@color/green_main</item>

    </style>

    <style name="Theme.Farming_customer" parent="Base.Theme.Farming_customer" />

    <!-- 툴바 설정 -->
    <style name="CustomToolbarStyle" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <!-- 제목 글씨체 설정 -->
        <item name="fontFamily">@font/pretendard_bold</item>
        <!-- 제목 글씨 크기 설정 -->
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 토글 버튼 설정 -->
    <style name="CustomToggleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@drawable/selector_button_text_color</item>
        <item name="backgroundTint">@drawable/selector_button_background</item>
        <item name="cornerRadius">10dp</item>
    </style>

    // Bottom Navigation font 설정
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12sp</item> <!-- 텍스트 크기 조절 -->
    </style>

</resources>