<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Farming_customer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        // 기본 색상 설정
        <item name="colorPrimary">@color/green_main</item>

    </style>

    <style name="Theme.Farming_customer" parent="Base.Theme.Farming_customer" />

    // Bottom Navigation font 설정
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12sp</item> <!-- 텍스트 크기 조절 -->
    </style>

    <!-- Tab Font 설정 -->
    <style name="CustomTabStyle" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="MySelectedTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="ToolBarTextAppearance" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item> <!-- 텍스트 크기 조절 -->
    </style>

</resources>