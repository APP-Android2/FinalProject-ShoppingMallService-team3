<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Farming_customer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        // 기본 색상 설정
        <item name="colorPrimary">@color/green_main</item>

    </style>

    <style name="Theme.Farming_customer" parent="Base.Theme.Farming_customer" />

    // Bottom Navigation font 설정
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12sp</item> <!-- 텍스트 크기 조절 -->
    </style>

    <!-- Order History Custom. 주문 내역 부분의 커스텀 스타일입니다. -->
    // TabLayout text custom
    <style name="CustomTablayout" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    // button text custom
    <style name="buttonText_OrderHistory" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    // button custom
    <style name="buttonStyle_OrderHistory" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="strokeColor">@color/green_main</item>
        <item name="android:textAppearance">@style/buttonText_OrderHistory</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="buttonStyle_OrderHistory_filled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/green_main</item>
        <item name="android:textAppearance">@style/buttonText_OrderHistory</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    // toggleButton text custom
    <style name="toggleButtonText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    // toggleButton custom
    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/btn_bg_selection_color_selector</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="strokeColor">@color/btn_bg_stroke_color_selector</item>
        <item name="android:textAppearance">@style/toggleButtonText</item>
    </style>

    // label style
    <style name="labelButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/orange_01</item>
        <item name="strokeColor">@color/orange_01</item>
        <item name="android:textAppearance">@style/toggleButtonText</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:clickable">false</item>
    </style>

    // ratingBar style
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
    </style>

    // button text bold, 16sp
    <style name="buttonTextBold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    // outlined button custom
    <style name="CustomOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="strokeColor">@color/green_main</item>
        <item name="android:textAppearance">@style/buttonTextBold</item>
    </style>
</resources>


